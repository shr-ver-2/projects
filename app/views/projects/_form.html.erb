<%= form_for @project do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <h3>Tasks</h3>
  <div id='tasks'>
    <%= f.fields_for :tasks do |task| %>
      <%= render 'task_fields', :f => task %>
    <% end %>
    <% byebug %>
    <br>
    <div class='links'>
      <%= link_to_add_association 'Add New Task', f, :tasks %>
    </div>
    <br>
  </div>
  <%= f.submit 'Save' %>
  <br>
<% end %>